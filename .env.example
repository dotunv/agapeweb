# Django settings
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_SECURE=True

# Database settings
DATABASE_URL=sqlite:///db.sqlite3  # For development
# DATABASE_URL=postgres://user:password@localhost:5432/agape  # For production

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email settings (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Payment gateway settings (optional)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Monitoring settings
SENTRY_DSN=your-sentry-dsn  # For error tracking
SENTRY_ENVIRONMENT=development  # development, staging, production
SENTRY_RELEASE=1.0.0  # Your application version
PROMETHEUS_MULTIPROC_DIR=/tmp  # For Prometheus multiprocess mode
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FORMAT=json  # Log format (json or verbose) 